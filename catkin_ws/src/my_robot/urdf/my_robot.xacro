<?xml version='1.0'?>

<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:include filename="$(find my_robot)/urdf/my_robot.gazebo" />
  <link name="robot_footprint"></link>

  <link name='chassis'>
    <pose>0 0 0.075 0 0 0</pose>
    <inertial>
      <mass value="20.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.08" ixy="0" ixz="0"
          iyy="0.15" iyz="0"
          izz="0.22"
      />
    </inertial>
    <collision name='chassis_collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size=".3 .2 .05"/>
      </geometry>
    </collision>
    <visual name='chassis_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".3 .2 .05"/>
      </geometry>
    </visual>
    <collision name='back_caster_collision'>
      <origin xyz="-0.10 0 -0.055" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0199"/>
      </geometry>
    </collision>

    <visual name='back_caster_visual'>
      <origin xyz="-0.10 0 -0.055" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.020"/>
      </geometry>
    </visual>
    <collision name='front_caster_collision'>
      <origin xyz="0.10 0 -0.055" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0199"/>
      </geometry>
    </collision>

    <visual name='front_caster_visual'>
      <origin xyz="0.10 0 -0.055" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.020"/>
      </geometry>
    </visual>
  </link>
 
  <link name='left_wheel'>
    <inertial>
      <mass value="10.0"/>
      <inertia
          ixx="0.015" ixy="0" ixz="0"
          iyy="0.015" iyz="0"
          izz="0.030"
      />
    </inertial>
    <collision name='left_wheel_collision'>
      <origin xyz="0.0 0 0" rpy="1.5707 0 0"/>
      <geometry>
        <cylinder radius="0.075" length="0.04"/>
      </geometry>
    </collision>
    <visual name='left_wheel_visual'>
      <origin xyz="0.0 0 0" rpy="1.5707 0  0"/>
      <geometry>
        <cylinder radius="0.075" length="0.04"/>
      </geometry>
    </visual>
  </link>

  <link name='right_wheel'>
     <inertial>
      <mass value="10.0"/>
      <inertia
          ixx="0.015" ixy="0" ixz="0"
          iyy="0.015" iyz="0"
          izz="0.030"
      />
    </inertial>
    <collision name='right_wheel_collision'>
      <origin xyz="0.0 0 0" rpy="1.5707 0 0"/>
      <geometry>
        <cylinder radius="0.075" length="0.04"/>
      </geometry>
    </collision>
    <visual name='right_wheel_visual'>
      <origin xyz="0.0 0 0" rpy="1.5707 0  0"/>
      <geometry>
        <cylinder radius="0.075" length="0.04"/>
      </geometry>
    </visual>
  </link>

  <link name="camera">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>
    <collision name='camera_collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size=".025 .08 .05"/>
      </geometry>
    </collision>
    <visual name='camera_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".025 .08 .05"/>
      </geometry>
    </visual>
  </link>

  <link name="hokuyo">
    <inertial>
      <mass value="1e-5"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>
    <collision name='hokuyo_collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size=".1 .1 .1"/>
      </geometry>
    </collision>
    <visual name='hokuyo_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry> 
	 <mesh filename="package://my_robot/meshes/hokuyo.dae"/>
      </geometry>
    </visual>
  </link>

  <!-- joints -->
  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="chassis" />
    <dynamics friction="0.0"/>
  </joint>

  <joint name="left_wheel_hinge" type="continuous" >
    <origin xyz="0.00 0.125 0" rpy="0 0 0"/>
    <child link="left_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <joint name="right_wheel_hinge" type="continuous" >
    <origin xyz="0.00 -0.125 0" rpy="0 0 0"/>
    <child link="right_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <joint name="camera_joint" type="fixed">
    <origin xyz="0.1625 0 0" rpy="0 0 0" />
    <parent link="chassis"/>
    <child link="camera" />
    <axis xyz="0 1 0" rpy="0 0 0"/>
  </joint>

  <joint name="hokuyo_joint" type="fixed">
    <origin xyz=".10 0 .075" rpy="0 0 0" />
    <parent link="chassis"/>
    <child link="hokuyo" />
    <axis xyz="0 1 0" rpy="0 0 0"/>
  </joint>

  <!-- colors -->
  <gazebo reference="left_wheel">
    <material>Gazebo/Red</material>
  </gazebo>
  <gazebo reference="right_wheel">
    <material>Gazebo/Green</material>
  </gazebo>
  <gazebo reference="chassis">
    <material>Gazebo/Orange</material>
  </gazebo>
  <gazebo reference="camera">
    <material>Gazebo/Yellow</material>
  </gazebo>

</robot>
